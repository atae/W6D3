<h2>New Tweet!</h2>
<form class="tweet-compose" action="/tweets" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea id='tweetContent' name="tweet[content]"></textarea>
    <strong class="chars-left">140 characters remaining</strong>
  </label>
  <br>

  <label>
    Mention
    <select id='selectUserIds' name="tweet[mentioned_user_ids][]">
      <option></option>
      <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
      <% end %>
    </select>
  </label>
  <br>

  <input id="submit" type="Submit" value="Post Tweet!">
</form>
